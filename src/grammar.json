{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "mako",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "mako_expression"
          },
          {
            "type": "SYMBOL",
            "name": "mako_declaration"
          },
          {
            "type": "SYMBOL",
            "name": "mako_comment"
          },
          {
            "type": "SYMBOL",
            "name": "text"
          }
        ]
      }
    },
    "text": {
      "type": "PATTERN",
      "value": ".+"
    },
    "mako_expression": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "${"
        },
        {
          "type": "FIELD",
          "name": "code",
          "content": {
            "type": "SYMBOL",
            "name": "python_code"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "mako_declaration": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "<%!"
        },
        {
          "type": "SYMBOL",
          "name": "python_code"
        },
        {
          "type": "STRING",
          "value": "%>"
        }
      ]
    },
    "mako_comment": {
      "type": "PATTERN",
      "value": "##[^\\n]*"
    },
    "python_code": {
      "type": "TOKEN",
      "content": {
        "type": "PREC",
        "value": -1,
        "content": {
          "type": "PATTERN",
          "value": "([^%]|%[^>])*"
        }
      }
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}