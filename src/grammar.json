{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "mako",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "mako_block"
          },
          {
            "type": "SYMBOL",
            "name": "mako_expression"
          },
          {
            "type": "SYMBOL",
            "name": "mako_declaration"
          },
          {
            "type": "SYMBOL",
            "name": "mako_comment"
          },
          {
            "type": "SYMBOL",
            "name": "text"
          }
        ]
      }
    },
    "text": {
      "type": "TOKEN",
      "content": {
        "type": "PREC",
        "value": -1,
        "content": {
          "type": "PATTERN",
          "value": ".+"
        }
      }
    },
    "mako_expression": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "${"
        },
        {
          "type": "FIELD",
          "name": "code",
          "content": {
            "type": "SYMBOL",
            "name": "python_code"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "mako_declaration": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "<%!"
        },
        {
          "type": "SYMBOL",
          "name": "python_code"
        },
        {
          "type": "STRING",
          "value": "%>"
        }
      ]
    },
    "mako_block": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "<%block"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "attribute"
          }
        },
        {
          "type": "STRING",
          "value": ">"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "text"
              },
              {
                "type": "SYMBOL",
                "name": "mako_comment"
              }
            ]
          }
        },
        {
          "type": "STRING",
          "value": "</%block>"
        }
      ]
    },
    "mako_comment": {
      "type": "PATTERN",
      "value": "##[^\\n]*"
    },
    "attribute": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          }
        },
        {
          "type": "STRING",
          "value": "="
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "string"
          }
        }
      ]
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[a-zA-Z_][a-zA-Z0-9_]*"
    },
    "string": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "\""
            },
            {
              "type": "REPEAT",
              "content": {
                "type": "PATTERN",
                "value": "[^\"]"
              }
            },
            {
              "type": "STRING",
              "value": "\""
            }
          ]
        },
        {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "'"
            },
            {
              "type": "REPEAT",
              "content": {
                "type": "PATTERN",
                "value": "[^']"
              }
            },
            {
              "type": "STRING",
              "value": "'"
            }
          ]
        }
      ]
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [
    {
      "type": "SYMBOL",
      "name": "python_code"
    }
  ],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}